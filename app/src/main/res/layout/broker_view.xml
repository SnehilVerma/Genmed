<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Broker"
    android:id="@+id/broker"
    android:background="@drawable/digital">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UPLOAD MEDICINES DETAILS"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter generic medicine"
        android:id="@+id/textView18"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/genn"
        android:layout_marginLeft="10dp"
        android:background="@drawable/search"
        android:layout_weight=".75"

        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/uploadgen"
        android:layout_below="@+id/genc"
        android:layout_alignStart="@+id/genc"
        android:onClick="uploadgen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter gen cost"
        android:id="@+id/textView19"
        android:layout_below="@+id/genn"
        android:layout_alignStart="@+id/textView18" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/genc"
        android:layout_marginLeft="10dp"
        android:background="@drawable/search"
        android:layout_weight=".75"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadstore"
        android:text="Enter medical store details"
        android:onClick="uploadstore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter medicine"
        android:id="@+id/textView11"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView19" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/gname"
        android:background="@drawable/search"
        android:layout_weight=".75"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter price"
        android:id="@+id/textView20"
        android:layout_alignLeft="@+id/textView19"
        android:layout_below="@+id/gname" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/shop"
        android:background="@drawable/search"
        android:layout_weight=".75"
        android:layout_below="@+id/textView20"
        android:layout_alignLeft="@+id/textView19" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:id="@+id/button5"
        android:onClick="uploadmed"
        android:layout_below="@+id/medg"
        android:layout_alignStart="@+id/medg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter generic medicine"
        android:id="@+id/textView12"
        android:layout_below="@+id/shop"
        android:layout_alignStart="@+id/shop" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/medg"
        android:background="@drawable/search"
        android:layout_weight=".75"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />


</RelativeLayout>